<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OneFinance.ViewModels"
        xmlns:views="using:OneFinance.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="OneFinance.Views.MainWindow"
        x:Name="Root"
        x:DataType="vm:MainWindowViewModel"
        Title="One Finance"
        Width="1200"
        Height="800"
        MinWidth="900"
        MinHeight="600"
        WindowStartupLocation="CenterScreen">

    <Window.Styles>
        <Style Selector="ToggleButton.year-toggle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        <Style Selector="ToggleButton.year-toggle:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ToggleButton.year-toggle:checked /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ToggleButton.year-toggle:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Styles>

    <Grid ColumnDefinitions="220,*">
        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
            <DockPanel>
                <!-- App Header -->
                <Border DockPanel.Dock="Top" 
                        Padding="20,24,20,20">
                    <StackPanel>
                        <TextBlock Text="One Finance" 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Items -->
                <ScrollViewer>
                    <StackPanel Margin="8" Spacing="4">
                        <Button Command="{Binding NavigateToDashboardCommand}"
                                Classes="nav-item"
                                Classes.selected="{Binding IsDashboardSelected}">
                            <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                        </Button>
                        
                        <Button Command="{Binding NavigateToTransactionsCommand}"
                                Classes="nav-item"
                                Classes.selected="{Binding IsTransactionsSelected}">
                            <TextBlock Text="Transactions" VerticalAlignment="Center"/>
                        </Button>

                        <!-- Spacer -->
                        <Border Height="1" 
                                Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                Margin="8,16"/>

                        <Button Command="{Binding NavigateToSettingsCommand}"
                                Classes="nav-item"
                                Classes.selected="{Binding IsSettingsSelected}">
                            <TextBlock Text="Settings" VerticalAlignment="Center"/>
                        </Button>

                        <Border Background="#1E1E1E" CornerRadius="8" Padding="12" Margin="0,12,0,0">
                            <StackPanel Spacing="8">
                                <DockPanel LastChildFill="False">
                                    <TextBlock Text="Ledger" FontWeight="SemiBold" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                    <Button DockPanel.Dock="Right" Content="Add" Command="{Binding OpenYearPromptCommand}" MinHeight="0" Background="#0078D4" Foreground="White" FontSize="13" Padding="6,2"/>
                                </DockPanel>

                                <Border Background="#101010" CornerRadius="8" Padding="10" IsVisible="{Binding IsYearPromptVisible}">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Add a year" FontWeight="SemiBold"/>
                                    <NumericUpDown Minimum="1900" Maximum="2999" Value="{Binding NewYearValue}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <Button Content="Add" Command="{Binding ConfirmAddYearCommand}" Padding="10,6" Background="#0078D4" Foreground="White"/>
                                        <Button Content="Cancel" Command="{Binding CancelYearPromptCommand}" Padding="10,6" Classes="ghost"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <ItemsControl ItemsSource="{Binding YearFolders}" Name="YearList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,2">
                                            <Grid ColumnDefinitions="*,Auto" Background="Transparent">
                                                <ToggleButton IsChecked="{Binding IsExpanded}" 
                                                              Classes="year-toggle" 
                                                              Padding="4" 
                                                              HorizontalAlignment="Stretch"
                                                              HorizontalContentAlignment="Left">
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <Panel>
                                                            <PathIcon Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" 
                                                                      Width="10" Height="10" 
                                                                      IsVisible="{Binding !IsExpanded}"/>
                                                            <PathIcon Data="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z" 
                                                                      Width="10" Height="10" 
                                                                      IsVisible="{Binding IsExpanded}"/>
                                                        </Panel>
                                                        <TextBlock Text="{Binding Year}" 
                                                                   FontWeight="SemiBold" 
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </ToggleButton>
                                                
                                                <Button Grid.Column="1"
                                                        Command="{Binding DataContext.PromptDeleteYearCommand, ElementName=Root}"
                                                        CommandParameter="{Binding}"
                                                        Classes="ghost"
                                                        Padding="4"
                                                        ToolTip.Tip="Delete Year">
                                                    <PathIcon Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                                              Width="12" Height="12"
                                                              Foreground="#EF4444"/>
                                                </Button>
                                            </Grid>

                                            <ItemsControl ItemsSource="{Binding Months}" IsVisible="{Binding IsExpanded}" Margin="24,0,0,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Content="{Binding FullName}"
                                                                HorizontalAlignment="Stretch"
                                                                Classes="nav-item"
                                                                Padding="8,6"
                                                                Command="{Binding DataContext.SelectMonthCommand, ElementName=Root}"
                                                                CommandParameter="{Binding}"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="{Binding PeriodStatus}" Opacity="0.7" FontSize="12"/>
                        </StackPanel>
                    </Border>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1">
            <ContentControl Content="{Binding CurrentViewModel}">
                <ContentControl.DataTemplates>
                    <DataTemplate DataType="vm:DashboardViewModel">
                        <views:DashboardView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:TransactionsViewModel">
                        <views:TransactionsView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:TransactionFormViewModel">
                        <views:TransactionFormView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:SettingsViewModel">
                        <views:SettingsView/>
                    </DataTemplate>
                </ContentControl.DataTemplates>
            </ContentControl>
        </Border>
        <!-- Delete Year Confirmation Overlay -->
        <Grid Grid.ColumnSpan="2" Background="#80000000" IsVisible="{Binding IsDeleteYearConfirmationVisible}" ZIndex="100">
            <Border Background="#1E1E1E" CornerRadius="8" Padding="24" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="300">
                <StackPanel Spacing="16">
                    <TextBlock Text="Delete Year?" FontSize="20" FontWeight="Bold" Foreground="#EF4444"/>
                    <TextBlock Text="Are you sure you want to delete this year and all its transactions? This action cannot be undone." TextWrapping="Wrap" Opacity="0.8"/>
                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelDeleteYearCommand}" Classes="ghost"/>
                        <Button Content="Delete" Command="{Binding ConfirmDeleteYearCommand}" Background="#EF4444" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
