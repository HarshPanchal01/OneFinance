<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:OneFinance.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="OneFinance.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="One Finance"
        Width="1024" Height="768"
        MinWidth="800" MinHeight="600">
    <Grid ColumnDefinitions="200,*">
        <!-- Sidebar -->
        <Border Background="#1E1E1E" Padding="0,16">
            <DockPanel>
                <!-- App Title -->
                <StackPanel DockPanel.Dock="Top" Margin="16,0,16,24">
                    <TextBlock Text="ðŸ’° One Finance" FontSize="18" FontWeight="Bold"/>
                </StackPanel>

                <!-- Settings at Bottom -->
                <Button DockPanel.Dock="Bottom" Classes="nav-item" Command="{Binding NavigateToSettingsCommand}" Margin="8,0,8,8">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="âš™ï¸"/>
                        <TextBlock Text="Settings"/>
                    </StackPanel>
                </Button>

                <!-- Navigation Items -->
                <StackPanel Margin="8,0" Spacing="4">
                    <Button Classes="nav-item" Command="{Binding NavigateToDashboardCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ“Š"/>
                            <TextBlock Text="Dashboard"/>
                        </StackPanel>
                    </Button>
                    <Button Classes="nav-item" Command="{Binding NavigateToTransactionsCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ’³"/>
                            <TextBlock Text="Transactions"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Column="1" Background="#121212">
            <ContentControl Content="{Binding CurrentViewModel}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <ContentControl Content="{Binding}"/>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </Border>
    </Grid>
</Window>
